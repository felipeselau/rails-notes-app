<% if notice.present? %>
  <p class="flash flash--notice"><%= notice %></p>
<% end %>

<% content_for :title, "Lists" %>

<h1>Lists</h1>

<% if @lists.any? %>
  <div id="lists">
    <% @lists.each do |list| %>
      <%= render list %>
      <p>
        <%= link_to "Show this list", list %>
      </p>
    <% end %>
  </div>
  <%= link_to "New list", new_list_path, class: "btn" %>
<% else %>
  <section class="card" style="text-align:center; padding: 48px; margin-top: 16px;">
    <div style="font-size: 40px; line-height: 1; margin-bottom: 12px;">🗂️</div>
    <h2 style="margin: 0 0 8px 0;">No lists yet</h2>
    <p style="margin: 0 0 16px 0; color: var(--muted);">
      start using the app by creating a list
    </p>
    <%= link_to "Create your first list", new_list_path, class: "btn btn--primary" %>
  </section>
<% end %>
