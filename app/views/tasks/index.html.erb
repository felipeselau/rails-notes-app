<% content_for :title, "Tasks" %>

<h1>Tasks</h1>

<div style="margin: 12px 0 16px; display:flex; justify-content: flex-end;">
  <%= link_to "New task", new_task_path, class: "btn btn--primary" %>
  </div>

<% if @tasks.any? %>
  <div id="tasks">
    <% @tasks.each do |task| %>
      <%= render task %>
      <p>
        <%= link_to "Show this task", task, class: "btn" %>
      </p>
    <% end %>
  </div>
<% else %>
  <section class="card" style="text-align:center; padding: 48px;">
    <div style="font-size: 36px; line-height: 1; margin-bottom: 10px;">âœ…</div>
    <h2 style="margin: 0 0 8px 0;">No tasks yet</h2>
    <p style="margin: 0 0 16px 0; color: var(--muted);">Create your first task</p>
    <%= link_to "New task", new_task_path, class: "btn btn--primary" %>
  </section>
<% end %>
