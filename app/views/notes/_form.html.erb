<%= form_with(model: note) do |form| %>
  <% if note.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
        <% note.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :content, style: "display: block" %>
    <%= form.textarea :content %>
  </div>

  <% if note.list_id.present? %>
    <%= form.hidden_field :list_id, value: note.list_id %>
    <div style="color: var(--muted); margin: 8px 0 0;">
      List: <%= note.list&.name || note.list_id %>
    </div>
  <% else %>
    <div>
      <%= form.label :list_id, style: "display: block" %>
      <%= form.text_field :list_id %>
    </div>
  <% end %>

  <div>
    <%= form.submit %>
  </div>
<% end %>
